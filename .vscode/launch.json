    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Spotify Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/spotify-vscode-player"
            ],
            "outFiles": [
                "${workspaceFolder}/spotify-vscode-player/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch (spotify-vscode-player)"
        }
    ]
}